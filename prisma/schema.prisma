datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
    id        String      @id @default(cuid())
    name      String
    price     Decimal
    createdAt DateTime @default(now())
    category  Category    @relation(fields: [categoryId], references: [id])
    categoryId String
    url       String

    @@index([id])
}

model Category {
  id String @id @default(cuid())
  name String
  createdAt DateTime @default(now())
  products Product[]

  @@index([id])
}